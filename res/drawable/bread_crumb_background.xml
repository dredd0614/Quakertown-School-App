<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#2f6699" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="4dp"
                android:top="10dp"
                android:right="4dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00000000"
                android:endColor="#00000000"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#00000000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="4dp"
                android:top="10dp"
                android:right="4dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>